  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/addon-links": "^10.1.4",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.24.2",
    "@types/react": "^19.0.0",
    "eslint-plugin-storybook": "^10.1.4",
    "typescript": "^5.9.3"
  }
