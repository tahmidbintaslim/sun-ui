{
  "name": "@sun-ui/core",
  "version": "1.0.0",
  "description": "Headless primitives and utilities for Sun UI. Framework-agnostic foundation.",
  "homepage": "https://sun-ui.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/tahmidbintaslim/sun-ui.git",
    "directory": "packages/core"
  },
  "keywords": [
    "headless",
    "primitives",
    "utilities",
    "typescript"
  ],
  "author": "Tahmid Bin Taslim <hello@tahmir.dev>",
